model User {
  id                    String         @id @default(uuid())
  fullName              String
  profileImage          String?
  gender                String?
  age                   Int?
  contactNo             String?
  address               String?
  status                String?
  licenseNo             String         @unique
  isLicenseNoValid      Boolean        @default(false)
  blockedMembers        String[]
  createdAt             DateTime       @default(now())
  updatedAt             DateTime       @default(now())
  role                  Role
  isApprove             String?        @default("pending")
  client                Client?
  provider              Provider?
  superAdmin            SuperAdmin?
  country               String
  state                 String
  resetPasswordToken    String?
  resetPasswordExpires  DateTime?      @default(now())
  privateKey            String?
  publicKey             String?
  // Relations
  sentNotifications     Notification[] @relation("SenderRelation")
  receivedNotifications Notification[] @relation("RecipientRelation")
  subscription          Subscription?
}

enum Role {
  client
  provider
  superadmin
}

enum Approve {
  approve
  reject
  pending
}
