model Notification {
  id          String           @id @default(uuid())
  title       String
  message     String
  recipientId String
  seen        Boolean          @default(false)
  type        NotificationType
  createdAt   DateTime         @default(now())
  user        User             @relation(fields: [recipientId], references: [id])
}

enum NotificationType {
  PROFILE_UPDATE
  PASSWORD_UPDATE
  DOCUMENT_SHARED
  DOCUMENT_SIGNED
}
